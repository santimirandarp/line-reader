{
  "name": "@santimir/line-reader",
  "author": "Santiago Miranda",
  "version": "0.0.11",
  "description": "aims to have similar functionality to python readlines",
  "keywords": [ "readlines", "linereader", "line-reader", "read by line" ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/santimirandarp/line-reader.git"
  },
  "bugs": {
    "url": "https://github.com/santimirandarp/line-reader/issues"
  },
  "main": "./lib/index.js",
  "module": "./lib-esm/index.js",
  "types": "./lib/index.d.ts",
  "files": [ "src", "lib", "lib-esm" ],
  "scripts": {
    "check-types": "tsc --noEmit",
    "clean": "rimraf lib lib-esm",
    "eslint": "eslint src --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prepack": "npm run tsc",
    "prettier": "prettier --check src",
    "prettier-write": "prettier --write src",
    "test": "npm run test-only && npm run eslint && npm run prettier && npm run check-types",
    "test-only": "jest --coverage",
    "tsc": "npm run clean && npm run tsc-cjs && npm run tsc-esm",
    "tsc-cjs": "tsc --project tsconfig.cjs.json",
    "tsc-esm": "tsc --project tsconfig.esm.json",
    "docs": "typedoc src/index.ts"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "eslint": "^8.11.0",
    "eslint-config-cheminfo-typescript": "^10.4.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "ensure-string": "^1.1.0"
  }
}

